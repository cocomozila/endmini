<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product" >

<select id="productlist" resultType="productdto">
 select * from DB-Product
</select>

<insert id="insertproduct" parameterType="productdto">
 insert into DB-Product values(#{productName} ,#{productEName},#{price},#{size},#{ptext},#{img},#{gender},#{incense},#{pvalue})
</insert>

<update id="updateproduct" parameterType="productdto">
	update DB-Product
	set name=#{productName} ,#{productEName},
	where id=#{productName}
</update>

<delete id="deleteproduct" parameterType="String" >
	delete from DB-Product where id=#{i}
</delete>

<select id="product" resultType="productdto" parameterType="String">
	select * from DB-Product where id=#{id}
</select>

<!-- parameterType="int[]" 생략 가능 -->
<select id="paginglist" resultType="productdto" >
select * from DB-Product limit 
	<foreach collection="array" item="num" separator="," >
	 	#{num}
	</foreach>
</select>


<select id="addresssearch" resultType="String" >
select id from DB-Product where address in 
<foreach collection="array" item="add" open="("  close=")"  separator=",">
	#{add}
</foreach>
</select>
</mapper>









